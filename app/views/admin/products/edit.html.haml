%h1 Editing product
= form_for :product, url: admin_product_path(@product), method: :patch do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited
        this product from being saved:
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :title
    %br
      = f.text_field :title, class: "form-control", style: "width: 350px"
  %p
    = f.label :picture
    %br
      = f.url_field :picture, class: "form-control", style: "width: 350px"
  %p
    = f.label :description
    %br
      = f.text_area :description, class: "form-control", style: "width: 350px"
  %p
    = f.label :quantity
    %br
      = f.number_field :quantity, class: "form-control", style: "width: 150px"
  %p
    = f.label :price
    %br
      = f.number_field :price, class: "form-control", style: "width: 150px"
  %p
    = f.submit class: "form-control", style: "width: 130px"

= link_to 'Back', admin_products_path
