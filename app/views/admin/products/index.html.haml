%h3 List of items in Our Store
%br
= link_to 'Enter a New Product', new_admin_product_path
%table.table
  %thead
    %tr
      %th Item No.
      %th Category Name
      %th Item Name
      %th Item Description
      %th Item Quantity
      %th Item Price
      %th Edit
      %th Delete
  %br
  %tbody
  - @products.each_with_index do |product, index|
    %tr
      %th= index + 1
      %td= product.categories.first.name
      %td= product.title
      %td= product.description
      %td= product.quantity
      %td $#{product.price}
      %td= link_to 'Edit', edit_admin_product_path(product), class: "btn btn-primary"
      %td= link_to 'Delete', admin_product_path(product), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to remove the item'}
  %br
